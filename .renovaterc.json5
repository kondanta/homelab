{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'abandonments:recommended',
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    ':automergeBranch',
    ":configMigration",
    ':disableRateLimiting',
    ':semanticCommits',
    ':timezone(Europe/Oslo)',
    'github>kondanta/homelab//.renovate/autoMerge.json5',
    'github>kondanta/homelab//.renovate/custom.json5',
    'github>kondanta/homelab//.renovate/grafanaDashboards.json5',    
    'github>kondanta/homelab//.renovate/groups.json5',    
    'github>kondanta/homelab//.renovate/labels.json5',
    'github>kondanta/homelab//.renovate/semanticCommits.json5',
    'github>kondanta/homelab//.renovate/overrides.json5',
    'github>kondanta/homelab//.renovate/changelogs.json5',
  ],
  rebaseWhen: 'behind-base-branch',
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  reviewers: ['kondanta'],
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  prBodyTemplate: "{{{table}}}{{{notes}}}{{{controls}}}",
  prBodyNotes: [
    "{{#if (and isGroup hasReleaseNotes)}}## Release Notes\n{{#each upgrades as |upgrade|}}\n{{#if upgrade.hasReleaseNotes}}\n<details>\n<summary>{{upgrade.githubName}}</summary>\n\n{{#each upgrade.releases as |release|}}\n{{#if release.releaseNotes}}\n### [`{{{release.version}}}`]({{{release.releaseNotes.url}}})\n\n{{/if}}\n{{/each}}\n\n</details>\n{{/if}}\n{{/each}}\n{{/if}}",
    "{{#if hasReleaseNotes}}{{#unless isGroup}}<details>\n<summary>Release Notes</summary>\n\n{{#each releases as |release|}}\n{{#if release.releaseNotes}}\n### [{{#if release.releaseNotes.name}}{{{release.releaseNotes.name}}}{{else}}`{{{release.version}}}`{{/if}}]({{{release.releaseNotes.url}}})\n\n{{/if}}\n{{/each}}\n</details>\n{{/unless}}\n{{/if}}",
  ],
  ignorePaths: [
    '**/provision/**',
  ],
  flux: {
    managerFilePatterns: [
      '/(^|/)clusters/.+\\.ya?ml$/',
      '/(^|/)infrastructure/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/(^|/)infrastructure/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)infrastructure/.+\\.ya?ml$/',
    ],
  },
}
