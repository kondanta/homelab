{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    ':automergeBranch',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':timezone(Europe/Oslo)',
    'github>kondanta/homelab//.renovate/autoMerge.json5',
    'github>kondanta/homelab//.renovate/custom.json5',
    'github>kondanta/homelab//.renovate/grafanaDashboards.json5',    
    'github>kondanta/homelab//.renovate/groups.json5',    
    'github>kondanta/homelab//.renovate/labels.json5',
    'github>kondanta/homelab//.renovate/semanticCommits.json5',
    'github>kondanta/homelab//.renovate/overrides.json5',
    'github>kondanta/homelab//.renovate/changelogs.json5',
  ],
  rebaseWhen: 'behind-base-branch',
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  reviewers: ['kondanta'],
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  ignorePaths: [
    '**/provision/**',
  ],
  flux: {
    managerFilePatterns: [
      '/(^|/)clusters/.+\\.ya?ml$/',
      '/(^|/)infrastructure/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/(^|/)infrastructure/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)infrastructure/.+\\.ya?ml$/',
    ],
  },
}
